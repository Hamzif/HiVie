 <div class="card-matching">
  <div class="bg-img" style="background-image: url(<%= cloudinary_url(@user.photo, :transformation => {:effect => "blur:800"}) %>)">
     <!-- https://res.cloudinary.com/demo/image/upload/w_200/e_gradient_fade,y_-0.5,b_black/sample.jpg -->
  </div>
  <div class="card-infos-users ml-2">
    <div>
      <div class="alias-font ml-3 mt-1">
        <%= @user.username %>, <%= @user.age %>
      </div>
      <div class="geo-location-font ml-3 mb-1">
        <%= @user.city %>
      </div>
    </div>
  </div>
</div>
<!-- This is the bio -->
  <div class="bio-font mt-3 mb-3">
    <div class="10">
      <% if @user.bio %>
        <%= @user.bio.truncate(100) %>
      <% end %>
    </div>
  </div>

  <!-- this is the pilla -->

      <% unless @user.characteristics.nil? %>
        <% @user.characteristics.each do |char| %>
          <div class="btn btn-pill active" id="pills-profiles">
            <%= char.name %>
          </div>
        <% end %>
      <% end %>
      <br><br>


      <!-- this is the heart and cross -->
    <div class="d-flex justify-content-center mx-5">
      <% unless @next_user %>
        <div id="matched-out">
          <%= link_to root_path do %>
            <h5>All Matched Out!</h5>
          <% end %>
        </div>
      <% else %>
        <div>
          <%= link_to user_path(@next_user) do %>
            <i class="fas fa-times mx-5"></i>
          <% end %>
        </div>
      <% end %>

        <div>
          <%= link_to user_matches_path(current_user, {matching_user_id: @user.id}), method: :post do %>
            <i class="fas fa-heart mx-5"></i>
          <% end %>
        </div>
      </div>

