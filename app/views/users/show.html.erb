<div class="card m-5" style="width: 24rem;">

<p> <%= cl_image_tag @user.photo, height: 425, width: 344, crop: :fill, class: "card-img-top" %></p>
<div class="card-body">

   <h3> <%= @user.first_name %> </h3>

   <!-- <p> next <%#= @next_user.email %> </p> -->

  <div class="d-flex justify-content-between mx-5">
    <div>
      <%= link_to user_path(@next_user) do %>
        <i class="fas fa-times"></i>
      <% end %>
    </div>
    <div>
      <% if @next_user.empty? %>
        <%= link_to root_path do %>
          <i class="fas fa-heart"></i>
        <% end %>
      <% else %>
        <%= link_to user_path(@next_user) do %>
          <i class="fas fa-heart"></i>
        <% end %>
      <% end %>
    </div>
  </div>
</div>

</div>
